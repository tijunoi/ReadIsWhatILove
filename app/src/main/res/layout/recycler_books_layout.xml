<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_book_profile"
        android:layout_width="130dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_book_profile" />

    <TextView
        android:id="@+id/title_book_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Nom"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/image_book_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/autor_book_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Autor"
        app:layout_constraintStart_toEndOf="@id/image_book_profile"
        app:layout_constraintTop_toBottomOf="@id/title_book_profile" />

</android.support.constraint.ConstraintLayout>